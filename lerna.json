{
  "useWorkspaces": true,
  "packages": ["packages/*"],
  "version": "independent",
  "npmClient": "npm",
  "command": {
    "version": {
      "allowBranch": "master"
    },
    "publish": {
      "conventionalCommits": true,
      "registry": "https://nexus.kontur.io/repository/npm-snapshots-a/"
    },
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock", "--legacy-peer-deps"]
    }
  }
}

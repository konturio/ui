{
  "useWorkspaces": true,
  "packages": [
    "k2-dev/*",
    "k2-packages/*"
  ],
  "version": "independent",
  "npmClient": "yarn",
  "command": {
    "version": {
      "allowBranch": "dev"
    },
    "publish": {
      "conventionalCommits": true,
      "registry": "https://nexus.kontur.io/repository/npm-snapshots-a/:_authToken=$NEXUS_NPM_TOKEN"
    },
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock"]
    }
  }
}

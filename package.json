{
  "name": "k2-front-end",
  "private": true,
  "workspaces": [
    "k2-packages/*",
    "k2-dev/*"
  ],
  "scripts": {
    "clean": "lerna clean --yes",
    "bootstrap": "lerna bootstrap && lerna link",
    "dev": "run-p start test:watch",
    "start": "lerna bootstrap && lerna link && lerna run dev --stream",
    "test:watch": "jest --watchAll",
    "test": "jest",
    "build": "tsc -b && lerna run build --stream",
    "update:version": "lerna version --yes --no-git-tag-version",
    "new:module": "./scripts/fixFolderPermissions.sh && npx plop"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.2",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/jest": "^25.1.3",
    "@types/node-sass": "^4.11.0",
    "@types/react": "^16.8.2",
    "@types/react-dom": "^16.8.0",
    "@types/react-router-dom": "^5.1.2",
    "babel-loader": "^8.0.0",
    "chalk": "^3.0.0",
    "core-js": "3",
    "css-loader": "^3.4.2",
    "css-modules-typescript-loader": "^4.0.0",
    "express": "^4.17.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.0.6",
    "inquirer-checkbox-plus-prompt": "^1.0.1",
    "jest": "^25.1.0",
    "lerna": "^3.20.2",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "plop": "^2.5.4",
    "resolve-url-loader": "^3.1.1",
    "sass-loader": "^8.0.2",
    "source-map-loader": "^0.2.3",
    "style-loader": "^1.1.3",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.3",
    "webpack": "^4.0.0",
    "webpack-cli": "^3.0.0",
    "webpack-dev-server": "^3.0.0"
  },
  "jest": {
    "moduleDirectories": [
      "k2-dev",
      "k2-packages"
    ],
    "projects": [
      "<rootDir>/k2-packages/*/src",
      "<rootDir>/k2-dev/*/src"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}

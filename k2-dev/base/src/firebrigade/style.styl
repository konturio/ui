@import "~@k2-packages/default-theme"

.fireBrigade 
  flex 1
  position relative


.map 
  height 100%
  width 100%


.search 
  width 300px


.overMap 
  position absolute
  top 0
  bottom 0
  right 0
  left 0
  pointer-events none
  margin 8px


.topLeftSlot 
  position absolute
  top: 0
  left: 0
  bottom: 0
  pointer-events all


.topRightSlot 
  position: absolute
  top: 0
  right: 0
  bottom: 0
  pointer-events: all


.bottomLeftSlot 
  position absolute
  bottom 0
  left 0
  pointer-events all


.bottomRightSlot 
  position absolute
  bottom 0
  right 0
  pointer-events all


@import "~@k2-packages/default-theme"

.root 
  input 
    border: none;
    flex: 1;
    background-color: transparent;
    outline: none;
    padding: 0;
    font-size: 1rem
    min-width: 0
    
.icons 
  color: neutral-text-color;
  display: flex;
  flex-flow: row nowrap;

.message
  font-size: unit * 1.5;
  padding: unit * 0.5 unit
  color: text-color
  border-radius: border-radius;
  box-shadow: shadow-2
.inputBox 
  display: flex;
  flex-flow: row nowrap;
  border: 1px solid neutral-text-color;
  border-radius: border-radius;
  padding: unit;
  color: neutral-text-color;
  position: relative;


.inputBox:before 
  content: '';
  display: block;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  border-radius: border-radius;
  pointer-events: none;


// States

.focus 
  .inputBox:before 
    outline-shadow(primary-color)
  


.disabled 
  .inputBox 
    background-color: gray-1;
  
  input 
    cursor: default;
  


.successes 
  .inputBox 
    border-color: success-color;
  

  &.focus 
    .inputBox:before 
      outline-shadow(success-color)
    
  



.error 
  .inputBox 
    border-color: error-color;
  

  &.focus 
    .inputBox:before 
      outline-shadow(error-color)
    
  

  .message 
    color: error-color;
  



{
  "name": "k2-front-end",
  "private": true,
  "workspaces": [
    "k2-packages/*",
    "k2-dev/*"
  ],
  "scripts": {
    "clean": "lerna clean --yes",
    "bootstrap": "lerna bootstrap && lerna link",
    "dev": "npm-run-all start test:watch",
    "start": "lerna bootstrap && lerna link && lerna run dev --stream",
    "test:watch": "jest --watchAll",
    "test": "jest",
    "build": "tsc -b && lerna run build --stream",
    "update:version": "lerna version --yes --no-git-tag-version --no-push",
    "publish:version": "lerna publish --yes --registry https://nexus.kontur.io/repository/npm-snapshots-a/:_authToken=${NEXUS_NPM_TOKEN}",
    "plop:new": "npx plop new",
    "plop:add": "npx plop add"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/jest": "^25.1.3",
    "@types/node-sass": "^4.11.0",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "@types/react-router-dom": "^5.1.3",
    "@typescript-eslint/eslint-plugin": "^2.22.0",
    "@typescript-eslint/parser": "^2.22.0",
    "babel-loader": "^8.0.0",
    "babel-plugin-dynamic-import-node": "^2.3.0",
    "chalk": "^3.0.0",
    "core-js": "3",
    "css-loader": "^3.4.2",
    "css-modules-typescript-loader": "^4.0.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.0.6",
    "identity-obj-proxy": "^3.0.0",
    "inquirer-checkbox-plus-prompt": "^1.0.1",
    "jest": "^25.1.0",
    "jest-transform-stub": "^2.0.0",
    "lerna": "^3.20.2",
    "node-sass": "^4.13.1",
    "plop": "^2.5.4",
    "prettier": "^1.19.1",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.1.3",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.3",
    "webpack": "^4.0.0",
    "webpack-cli": "^3.0.0",
    "webpack-dev-server": "^3.0.0"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/.jest/file-mock.js",
      "\\.(scss|sass|css)$": "<rootDir>/.jest/css-mock.js"
    },
    "moduleDirectories": [
      "k2-dev",
      "k2-packages"
    ],
    "projects": [
      "<rootDir>/k2-packages/*/src",
      "<rootDir>/k2-dev/*/src"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "dependencies": {
    "npm-run-all": "^4.1.5"
  }
}

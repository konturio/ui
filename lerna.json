{
  "useWorkspaces": true,
  "packages": ["packages/*"],
  "version": "independent",
  "npmClient": "npm",
  "command": {
    "version": {
      "allowBranch": "main"
    },
    "publish": {
      "conventionalCommits": true
    },
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock", "--legacy-peer-deps"]
    }
  }
}

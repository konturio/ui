{
  "extends": "../../tsconfig.settings.json",
  "compilerOptions": {
    "rootDir": "src",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "outDir": "tslib"
  },
  "include": ["./../../global.d.ts", "./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["node_modules", "./**/*.test.ts","./**/*.test.tsx", "./**/*.fixture.ts", "./**/fixture/*.*"]
}

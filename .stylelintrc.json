{
  "extends": "stylelint-config-recommended",
  "rules": {
    "block-no-empty": null,
    "no-descending-specificity": null,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "import-normalise"
        ]
      }
    ],
    "selector-nested-pattern": null,
    "font-family-no-missing-generic-family-keyword": [
      true,
      {
        "ignoreFontFamilies": [
         "/var\\(.*\\)/"
        ]
      }
    ],
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": [
          "global"
        ]
      }
    ]
  }
}
{
  "name": "k2-front-end",
  "private": true,
  "workspaces": [
    "k2-packages/*",
    "k2-dev/*"
  ],
  "scripts": {
    "bootstrap": "lerna link && lerna bootstrap",
    "dev": "lerna run dev --stream",
    "start": "lerna link && lerna bootstrap && tsc -b && yarn run test && lerna run dev --stream",
    "test": "jest",
    "compile": "tsc --build --force tsconfig.json",
    "update:version": "lerna version --include-merged-tags",
    "create:release": "lerna version --include-merged-tags conventional-changelog -p angular -i CHANGELOG.md -w --writer-opts ./writer-opts.js",
    "new:module": "npx plop"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.2",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/jest": "^25.1.2",
    "@types/react": "^16.8.2",
    "@types/react-dom": "^16.8.0",
    "@types/react-router-dom": "^5.1.2",
    "babel-loader": "^8.0.0",
    "chalk": "^3.0.0",
    "core-js": "3",
    "express": "^4.17.1",
    "fs": "^0.0.1-security",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.0.6",
    "http": "^0.0.0",
    "inquirer-checkbox-plus-prompt": "^1.0.1",
    "jest": "^25.1.0",
    "plop": "^2.5.4",
    "source-map-loader": "^0.2.3",
    "typescript": "^3.7.5",
    "webpack": "^4.0.0",
    "webpack-cli": "^3.0.0",
    "webpack-dev-server": "^3.0.0"
  }
}

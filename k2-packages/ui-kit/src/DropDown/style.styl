@import "~@k2-packages/default-theme"

.root 
  margin 0
  margin-top unit
  padding 0
  box-shadow shadow-1
  border-radius 0 0 border-radius border-radius
  overflow: auto

.option 
  cursor pointer
  padding unit * 2
  display: flex
  padding-left: 2em
  position relative
  &:hover 
    background-color primary-color
    color primary-text-color

.selected 
  background-color secondary-color
  color secondary-text-color

.highlight 
  background-color hsla(61, 100%, 50%, 0.4)

.radio
  position: absolute
  opacity: 0
  &:focus ~ .option:after
    height: 100%
    width: 4px;
    background-color: primary-color
    content: ''
    position: absolute
    display: block
    top: 0;
    left: 0

.badge
  left: unit
  position absolute

.bind
  border-radius: 4px
  width: 1em
  height: 1em
  border: 1px solid #bbb9b9
  background-color: white
  box-shadow: 0px 1px 10px -4px black, 0px 1px 1px -1px hsla(0, 0%, 0%, .3);
  display: inline-flex
  align-items: center
  justify-content: center
  font-size: .8em
  padding: .6em
  color: #6f6f6f